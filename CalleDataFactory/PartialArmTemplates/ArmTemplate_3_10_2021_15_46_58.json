											"ActivityName": {
												"value": {
													"value": "@item().ActivityName",
													"type": "Expression"
												},
												"type": "String"
											},
											"ErrorMessage": {
												"value": {
													"value": "@item().ErrorMessage",
													"type": "Expression"
												},
												"type": "String"
											},
